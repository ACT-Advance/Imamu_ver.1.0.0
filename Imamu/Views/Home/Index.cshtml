<div class="container">
    <form class="form-horizontal">
		<center><h1>ログイン</h1></center>
        @using (Html.BeginForm(
				"Login",
				"Home"
		))
        {
		    <div class="form-group">
                <label class="control-label col-xs-5">ユーザID</label>
                <div class="col-xs-1">
                    <!--input type="text" name="loginId" class="form-control"-->
			        @Html.TextBox("UserId", "", new { maxlength = 20 })
                </div>
            </div>
            <div class="form-group">
			    <label class="control-label col-xs-5">パスワード</label>
                <div class="col-xs-1">
                    <!--input type="text" name="password" value="" class="form-control"-->
                    @Html.TextBox("Password", "", new { maxlength = 20 })
                </div>
    		</div>
            <div class="form-group">
                <div class="col-xs-offset-5 col-xs-6">
                    <input type="submit" class="btn btn-primary btn-lg" value="ログイン"/>
                </div>
    		</div>
        }
	</form>
</div>
